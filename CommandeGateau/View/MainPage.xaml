<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommandeGateau.MainPage"
             xmlns:viewmodel="clr-namespace:CommandeGateau.ViewModel"
             x:DataType="viewmodel:MainViewModel">
    <Grid RowDefinitions="1,auto,auto,auto,auto" 
        ColumnDefinitions="*,auto,*"
          ColumnSpacing="0"
          RowSpacing="15">

        <!-- Logo -->
        <Image
            Grid.Row="1"
            Grid.Column="1"
            HeightRequest="300"
            Source="logo.png"/>

        <Button
            Grid.Column="1"
            Grid.Row="2"
            Background="Transparent"
            BorderColor="#D8A94A"
            BorderWidth="2"
            CornerRadius="20"
            Text="Nouvelle commande"
            TextColor="#EC4E8F"
            Command="{Binding GoToNewCommand}"/>

        <Button
            Grid.Column="1"
            Grid.Row="3"
            Background="Transparent"
            BorderColor="#D8A94A"
            BorderWidth="2"
            CornerRadius="20"
            Text="Commandes"
            TextColor="#EC4E8F"
            Command="{Binding GoToCommandeCommand}"/>

        <Label
            Grid.Row="4"
            Grid.Column="1"
            FontSize="12"
            Text="© 2025 ZzVf - Tous droits réservés"
            TextColor="Gray"
            HorizontalTextAlignment="Center"
            Margin="0,350,0,10" />

    </Grid>
</ContentPage>
